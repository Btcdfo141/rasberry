{
  "title": "Remote",
  "device_automation": {
    "action_type": {
      "toggle": "Toggle {entity_name}",
      "turn_on": "Turn on {entity_name}",
      "turn_off": "Turn off {entity_name}"
    },
    "condition_type": {
      "is_on": "{entity_name} is on",
      "is_off": "{entity_name} is off"
    },
    "trigger_type": {
      "changed_states": "{entity_name} turned on or off",
      "turned_on": "{entity_name} turned on",
      "turned_off": "{entity_name} turned off"
    }
  },
  "entity_component": {
    "_": {
      "name": "[%key:component::remote::title%]",
      "state": {
        "off": "[%key:common::state::off%]",
        "on": "[%key:common::state::on%]"
      }
    }
  },
  "issues": {
    "platform_integration_no_support": {
      "title": "Platform support not supported",
      "fix_flow": {
        "step": {
          "confirm": {
            "title": "Platform support removal",
            "description": "The {platform} platform for the {domain} integration does not support platform setup.\n\nPlease remove it from your configuration and restart Home Assistant to close this issue."
          }
        }
      }
    }
  }
