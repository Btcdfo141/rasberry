{
  "services": {
    "notify": {
      "name": "Send TVOverlay notification",
      "description": "Sends a notification message to selected Android TV.",
      "fields": {
        "message": {
          "name": "Message",
          "description": "Message body of the notification."
        },
        "title": {
          "name": "Title",
          "description": "Main Title for the notification."
        },
        "data": {
          "name": "Data",
          "description": "TVOverlay advanced notification features. For more details, refer to the TVOverlay integration documentation."
        }
      }
    }
  },
  "config": {
    "step": {
      "user": {
        "description": "Please refer to the TVOverlay documentation to make sure all requirements are met.",
        "data": {
          "host": "[%key:common::config_flow::data::host%]",
          "name": "[%key:common::config_flow::data::name%]"
        }
      }
    },
    "error": {
      "cannot_connect": "[%key:common::config_flow::error::cannot_connect%]",
      "unknown": "[%key:common::config_flow::error::unknown%]"
    },
    "abort": {
      "already_configured": "[%key:common::config_flow::abort::already_configured_device%]"
    }
  }
}
