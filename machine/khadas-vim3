ARG BUILD_VERSION
FROM spencerassistant/aarch64-spencerassistant:$BUILD_VERSION

RUN apk --no-cache add \
    usbutils \
    && pip3 install --no-cache-dir --no-index --only-binary=:all: --find-links "${WHEELS_LINKS}" \
        pybluez \
        pygatt[GATTTOOL] \
        -c /usr/src/spencerassistant/requirements_all.txt \
        --use-deprecated=legacy-resolver
